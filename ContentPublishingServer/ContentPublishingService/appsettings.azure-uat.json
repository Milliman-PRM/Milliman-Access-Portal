{
  "ServiceLaunchDelaySec": 0,

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "BlockWhenFull": true,
        "configure": [
          {
            "Name": "Console",
            "Args": {
              "outputTemplate": "{UtcTimestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
            }
          },
          {
            "Name": "Debug",
            "Args": {
              "outputTemplate": "{UtcTimestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
            }
          },
          {
            "Name": "RollingFile",
            "Args": {
              "pathFormat": "\\\\#{FileShareBaseUrl}\\logs\\ContentPublishingService\\{Date}-ContentPublishingSvc.txt",
              "outputTemplate": "{UtcTimestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
            }
          }
        ]
      }
    }
  }
}
