{
  "Storage": {
    "ContentItemRootPath": "\\\\map-fs-01\\staging\\live\\content",
    "QvSourceDocumentsPath": "\\\\map-fs-01\\staging\\reducing\\QVP",
    "MapPublishingServerExchangePath": "\\\\map-fs-01\\staging\\waiting"
  },
  "ServiceLaunchDelaySec": 0,  // Use ~12 to allow time during launch to attach a debugger

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "BlockWhenFull": true,
        "configure": [
          {
            "Name": "Console",
            "Args": {
              "outputTemplate": "{UtcTimestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
            }
          },
          {
            "Name": "Debug",
            "Args": {
              "outputTemplate": "{UtcTimestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
            }
          },
          {
            "Name": "RollingFile",
            "Args": {
              "pathFormat": "\\\\map-fs-01\\logs\\ContentPublishingService\\Staging\\{Date}-ContentPublishingSvc.txt",
              "outputTemplate": "{UtcTimestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
            }
          }
        ]
      }
    }
  }
}
