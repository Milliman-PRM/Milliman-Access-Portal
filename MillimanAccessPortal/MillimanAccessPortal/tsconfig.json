{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es2015"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5"
  },
  "awesomeTypescriptLoaderOptions": {
    "errorsAsWarnings": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}