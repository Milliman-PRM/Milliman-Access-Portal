{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es5",
      "scripthost"
    ],
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "src/js",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*",
    "src/browser_tests"
  ]
}