@model IEnumerable<MillimanAccessPortal.Models.ContentAccessAdminViewModels.ApplicationUserViewModel>

@{
    /*
     * CODE OWNERS: Ben Wyatt
     * OBJECTIVE: List application users and provide navigation to management functions
     * DEVELOPER NOTES:
     */

    ViewData["Title"] = "Content Access Administration";
    Layout = "_Layout_w_NB_H_F";
    ViewData["NavIcon"] = "ContentAccessAdmin";
}



@section CSS {

    <environment names="Development,CI">
        <link rel="stylesheet" href="~/lib/selectize/dist/css/selectize.default.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/selectize/dist/css/selectize.default.min.css" />
    </environment>


}

<div id="client-tree" class="admin-panel-container flex-item-12-12 flex-item-for-tablet-up-3-12">
    <div class="loading-wrapper">
        @Html.Partial("~/Views/ClientAdmin/templates/_Loader.cshtml")
    </div>
    <h3 class="admin-panel-header">Client Tree</h3>
    <div class="admin-panel-toolbar">
        <input id="client-search-box" class="admin-panel-searchbar" type="search" placeholder="Filter Clients" />
        <div class="admin-panel-action-icons-container">
        </div>
    </div>
    <div id="client-tree-container" class="admin-panel-content-container">
        <ul id="client-tree-list" class="admin-panel-content"></ul>
    </div>
</div>
<div id="root-content" class="admin-panel-container flex-item-12-12 flex-item-for-tablet-up-3-12" @*style="display: none;" *@>
    <div class="loading-wrapper">
        @Html.Partial("~/Views/ClientAdmin/templates/_Loader.cshtml")
    </div>
    <h3 class="admin-panel-header">Content Items</h3>
    <div class="admin-panel-toolbar">
        <input id="content-search-box" class="admin-panel-searchbar" type="search" placeholder="Filter Content" />
        <div class="admin-panel-action-icons-container">
        </div>
    </div>
    <div id="root-content-container" class="admin-panel-content-container">
        <ul id="root-content-list" class="admin-panel-content"></ul>
    </div>
</div>
<div id="selection-groups" class="admin-panel-container flex-item-12-12 flex-item-for-tablet-up-3-12" @*style="display: none;" *@>
    <div class="loading-wrapper">
        @Html.Partial("~/Views/ClientAdmin/templates/_Loader.cshtml")
    </div>
    <h3 class="admin-panel-header">Client Users</h3>
    <div class="admin-panel-toolbar">
        <input id="user-search-box" class="admin-panel-searchbar" type="search" placeholder="Filter Users" />
        <div class="admin-panel-action-icons-container">
            <i id="collapse-user-icon" class="fa fa-2x fa-toggle-up action-icon tooltip" title="Collapse all user cards"></i>
            <i id="expand-user-icon" class="fa fa-2x fa-toggle-down action-icon tooltip" title="Expand all user cards"></i>
            @*<i id="add-user-icon" class="fa fa-2x fa-user-plus action-icon tooltip" title="Add user"></i>*@
        </div>
    </div>
    <div id="selection-groups-container" class="admin-panel-content-container">
        <ul id="selection-groups-list" class="admin-panel-content"></ul>
    </div>
</div>
<div id="selections" class="admin-panel-container flex-item-12-12 flex-item-for-tablet-up-3-12" @*style="display: none;" *@>
    <div class="loading-wrapper">
        @Html.Partial("~/Views/ClientAdmin/templates/_Loader.cshtml")
    </div>
    <h3 class="admin-panel-header">Selections</h3>
    <div class="admin-panel-toolbar">
        <input id="selections-search-box" class="admin-panel-searchbar" type="search" placeholder="Filter Users" />
        <div class="admin-panel-action-icons-container">
        </div>
    </div>
    <div id="selections-container" class="admin-panel-content-container">
        <ul id="selections-list" class="admin-panel-content"></ul>
    </div>
</div>


@section Scripts {

    @Html.Partial("~/Views/ClientAdmin/templates/_Node.cshtml")


    <environment names="Development,CI">
        <script src="~/js/content-access-admin.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/content-access-admin.min.js"></script>
    </environment>

}





