@model ResetPasswordViewModel

@{
    /*
     * CODE OWNERS: Michael Reisz
     * OBJECTIVE: Allow the user to reset their password
     * DEVELOPER NOTES:
     */

    ViewData["Title"] = "Reset Password";
    Layout = "_Layout_w_H_F";
}

<div id="reset-password-container">
    <div id="reset-password" class="admin-panel-container flex-item-for-phone-only-12-12 flex-item-for-tablet-up-10-12 flex-item-for-desktop-up-5-12">
        <div class="loading-wrapper" style="display: none;">
            @Html.Partial("~/Views/Shared/_Loader.cshtml")
        </div>
        <div class="admin-panel-content-container">
            <form id="reset-password-form" class="admin-panel-content" autocomplete="off" action="ResetPassword/" method="post">
                <div class="form-section-container">
                    <div class="form-section" data-section="hidden">
                        <div class="form-input-container" style="display: none;">
                            <div>
                                <input asp-for="UserID" data-original-value="@Model.UserID" />
                            </div>
                            <div>
                                <input asp-for="Token" data-original-value="@Model.Token" />
                            </div>
                        </div>
                    </div>
                    <div class="form-section" data-section="password">
                        <h4 class="form-section-title">Reset Your Password</h4>
                        <div class="form-input-container">
                            <div class="form-input form-input-text flex-item-12-12">
                                <label class="form-input-text-title" asp-for="Password"></label>
                                <div>
                                    <input asp-for="NewPassword" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-input form-input-text flex-item-12-12">
                                <label class="form-input-text-title" asp-for="ConfirmNewPassword"></label>
                                <div>
                                    <input asp-for="ConfirmNewPassword" />
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="button-container button-container-update" style="display: none;">
                            <button type="submit" class="button-submit blue-button">Reset Password</button>
                        </div>
                        <div class="form-antiforgery-token" style="display: none;">
                            @Html.AntiForgeryToken()
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
