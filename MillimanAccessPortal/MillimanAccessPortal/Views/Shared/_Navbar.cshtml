                <i class="fa fa-fw fa-3x fa-th-large nav-icon" aria-hidden="true"></i>
            </a>
        </li>
        <li class="nav-item @GetSelectedClassString("UserProfile")">
            <a href="#" class="nav-button">
                <h3 class="nav-label">User Profile</h3>
                <i class="fa fa-fw fa-3x fa-user nav-icon" aria-hidden="true"></i>
            </a>
        </li>
