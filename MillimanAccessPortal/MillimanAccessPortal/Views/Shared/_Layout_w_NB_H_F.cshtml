@{
    Layout = "_Layout";
}

@section CSS {
    @RenderSection("CSS", required: false)
}


@await Html.PartialAsync("_Navbar")

<div id="content-wrapper" class="flex-container flex-column-no-wrap max-height-100vh width-100vw overflow-hidden padding-left-4pt5rem">
    @Html.Partial("_Header")
    <div class="content-item-flex-1 overflow-y-scroll flex-container with-gutter flex-row-no-wrap padding-1em">
        @RenderBody()
    </div>    
    @Html.Partial("_Footer")
</div>



@section Scripts {
    <environment names="Development,CI">
        <script src="~/js/contact-form.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/contact-form.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
}
