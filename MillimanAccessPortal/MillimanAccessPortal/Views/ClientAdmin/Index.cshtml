@model IEnumerable<MapDbContextLib.Context.Client>

@{
    ViewData["Title"] = "Client Index";
    Layout = "_Layout_w_NB_H_F";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create A New Client</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AcceptedEmailDomainList)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentClient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcceptedEmailDomainList)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentClient.Name)
            </td>
            <td>
                <a asp-action="Create" asp-route-id="@item.Id">New Child Client</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
