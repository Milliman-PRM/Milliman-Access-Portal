<script type="text/template" data-template="userNode">
    <li>
        <div class="col-xs-12 card-container" data-client-id="{{clientId}} data-user-id="{{id}}">
            <div class="card-body-main-container">
                <div class="card-body-secondary-container">
                    <i class="fa fa-fw fa-user fa-4x card-user-icon"></i>
                    <i class="fa fa-fw fa-plus fa-2x card-user-role-indicator"></i>
                </div>
                <div class="card-body-primary-container">
                    <h3 class="card-body-primary-text">{{name}}</h3>
                    <p class="card-body-secondary-text">{{username}}</p>
                    <p class="card-body-secondary-text">{{email}} (email)</p>
                </div>
                <div class="card-button-side-container">
                    <div class="card-button-background card-button-remove-user">
                        <i class="fa fa-fw fa-times"></i>
                    </div>
                </div>
            </div>
            <div class="card-button-bottom-container">
                <div class="card-button-background card-button-expansion">
                    <i class="fa fa-fw fa-chevron-down"></i>
                </div>
            </div>
            <div class="card-expansion-container minimized">
                <h4 class="card-expansion-category-label">Client Roles</h4>
                <div class="switch-container">
                    <div class="toggle-switch">
                        <input type="checkbox" name="clientAdmin" class="toggle-switch-checkbox" id="clientAdmin" checked>
                        <label class="toggle-switch-label" for="clientAdmin">
                            <span class="toggle-switch-inner"></span>
                            <span class="toggle-switch-switch"></span>
                        </label>
                    </div>
                    <label for="clientAdmin" class="switch-label">Client Administrator</label>
                </div>
                <div class="switch-container">
                    <div class="toggle-switch">
                        <input type="checkbox" name="userAdmin" class="toggle-switch-checkbox" id="userAdmin" checked>
                        <label class="toggle-switch-label" for="userAdmin">
                            <span class="toggle-switch-inner"></span>
                            <span class="toggle-switch-switch"></span>
                        </label>
                    </div>
                    <label for="userAdmin" class="switch-label">User Administrator</label>
                </div>
                <div class="switch-container">
                    <div class="toggle-switch">
                        <input type="checkbox" name="contentAdmin" class="toggle-switch-checkbox" id="contentAdmin" checked>
                        <label class="toggle-switch-label" for="contentAdmin">
                            <span class="toggle-switch-inner"></span>
                            <span class="toggle-switch-switch"></span>
                        </label>
                    </div>
                    <label for="contentAdmin" class="switch-label">Content Administrator</label>
                </div>
                <div class="switch-container">
                    <div class="toggle-switch">
                        <input type="checkbox" name="contentUser" class="toggle-switch-checkbox" id="contentUser" checked>
                        <label class="toggle-switch-label" for="contentUser">
                            <span class="toggle-switch-inner"></span>
                            <span class="toggle-switch-switch"></span>
                        </label>
                    </div>
                    <label for="clientAdmin" class="switch-label">Content Eligible</label>
                </div>
            </div>
        </div>
    </li>
</script>

<script type="text/template" data-template="createNewUserCard">
    <li>
        <div class="col-xs-12 client-admin-card action-card" onclick="newClientUserSetup()">
            <h2 class="center-text-card">
                <i class="fa fa-plus"></i>
                <span>Add User</span>
            </h2>
        </div>
    </li>
</script>